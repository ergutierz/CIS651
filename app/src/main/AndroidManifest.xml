<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CIS651Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CIS651Syracuse"
        tools:targetApi="31">
        <activity
            android:name=".project3.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project2.view.MovieViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".project2.view.MovieListDetailActivity"
            android:exported="false" />
        <activity
            android:name=".project2.view.MovieAboutActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".project1.model.view.GameScoreActivity"
            android:exported="false" />
        <activity
            android:name=".project1.model.view.GameActivity"
            android:exported="false" />
        <activity
            android:name=".project1.model.view.GameSelectionActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>